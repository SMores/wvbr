<div class='ad'>
  <%= raw @page.content_for(:banner_ad) %>
</div>
<div id="now_playing" class="home_box side">
  <h2>Now Playing</h2>
  <p>This should be currently playing stuff and a link to history</p>
</div>
<div id="news" class="home_box main">
  <h2><%= link_to "WVBR News", '/news' %></h2>
